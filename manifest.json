{
    "name" : "Application Helper",
    "version" : "1.0",
    "description" : "Application Helper",
    "permissions" : ["contextMenus"],
    "background" : {
        "scripts" : ["background.js"],
        "persistent" : false
    },
    "content_scripts" : [
        {
            "matches" : ["http://*/*", "https://*/*"],
            "js" : ["contentScript.js"]
        }
    ],
    "browser_action" : {
        "default_popup" : "popup.html",
        "default_icon" : {
            "16" : "images/16.png",
            "32" : "images/32.png",
            "48" : "images/48.png",
            "128" : "images/128.png"
        }
    },
    "icons" : {
        "16" : "images/16.png",
        "32" : "images/32.png",
        "48" : "images/48.png",
        "128" : "images/128.png"
    },
    "manifest_version" : 2
}